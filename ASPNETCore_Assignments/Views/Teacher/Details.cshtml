@model Teacher
@{
	ViewData["Title"] = Model.Name;
}

@section Styles {
	<environment include="Development">
		<link href="~/css/school_management.css" rel="stylesheet" type="text/css" />
	</environment>
}


<div class="container-fluid">

	<div id="loaderId" class="mt-2 text-center w-100 position-fixed sticky_nav" style="display: none;">
		<div class="spinner-grow text-success" role="status">
			<span class="sr-only">Loading...</span>
		</div>
		<div class="spinner-grow text-warning mx-4" style="animation-delay: 0.3s;" role="status">
			<span class="sr-only">Loading...</span>
		</div>
		<div class="spinner-grow text-primary" role="status">
			<span class="sr-only">Loading...</span>
		</div>
	</div>

	<partial name="~/Views/Teacher/_TeacherDetails.cshtml" model="Model" />
</div>

@section Scripts {
	<environment include="Development">
		<script src="~/js/schoolManagement-bandle.js"></script>
	</environment>
}