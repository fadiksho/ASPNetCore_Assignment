@model TeacherForCreatingDto
<form asp-controller="Teacher"
			asp-action="AddTeacher"
			id="addTeacherFormId"
			data-ajax="true"
			method="POST"
			data-ajax-method="POST"
			data-ajax-mode="replace"
			data-ajax-update="#dashboard_content"
			
			data-ajax-loading="#personListLoaderId">
	<div class="form-group">
		<label asp-for="Name">Teacher Name</label>
		<input asp-for="Name" class="form-control" aria-describedby="TeacherName" placeholder="Enter Teacher Name...">
		<small class="text-danger"><span asp-validation-for="Name"></span></small>
	</div>
	<button type="submit" class="btn btn-success">Save Teacher</button>
</form>