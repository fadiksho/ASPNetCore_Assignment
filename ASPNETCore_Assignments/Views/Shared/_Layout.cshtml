<!DOCTYPE html>

<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon"
        type="image/x-icon"
        href="~/favicon.ico">
  <title>@ViewBag.Title</title>
  <link href="https://fonts.googleapis.com/css?family=Felipa"
        rel="stylesheet">
  <environment include="Development">
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", required: false)
  </environment>
</head>
<body>
  <!--#region ToolBar Navigation---------------------------------------------------------------------------------------------->
  <nav id="toolBarId"
       role="navigation"
       class="navbar fixed-top navbar-expand-sm navbar-dark bg-primary top_nav">
    <a asp-controller="Home"
       asp-action="Index"
       class="navbar-brand">Code & Coffees</a>
    <button class="navbar-toggler"
            type="button"
            data-toggle="collapse"
            data-target="navbarLinks"
            aria-label="Toggle navigation">

      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse"
         id="navbarLinks">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a asp-controller="Home"
             asp-action="Index"
             class="nav-link">Home</a>
        </li>
        <li class="nav-item">
          <a asp-action="About"
             asp-controller="Home"
             class="nav-link">About</a>
        </li>
        <li class="nav-item">
          <a asp-controller="Home"
             asp-action="Contact"
             class="nav-link">Contact</a>
        </li>
				<li class="nav-item dropdown">
					<a class="nav-link dropdown-toggle" role="button" data-toggle="show" data-target="projectDropDownId" aria-haspopup="true" aria-expanded="false">
						Assignments
					</a>
					<div id="projectDropDownId" class="dropdown-menu dropdown-menu-left">
						<a class="dropdown-item" asp-controller="Temperature" asp-action="FeverCheck">MVC Assignment Basic 1</a>
						<a class="dropdown-item" asp-controller="GuessingGame" asp-action="Index">MVC Assignment Basic 2</a>
						<a class="dropdown-item" asp-controller="Person" asp-action="Index">Data Assignment 1</a>
            <a class="dropdown-item" asp-controller="SchoolManagement" asp-action="dashboard">School Management</a>
					</div>
				</li>
      </ul>
    </div>
  </nav>
  <!--#endregion-->
  <!--#region Pages---------------------------------------------------------------------------------------------->
  <main id="main_tag_id" class="main_content">
    @RenderBody()
  </main>
  <!--#endregion-->
  <!--#region footer---------------------------------------------------------------------------------------------->
  <footer class="container pt-4 pb-2 overflow-hidden">
    <div class="row mt-4 d-flex justify-content-around">
      <!-- Resources & Follow-->
      <div class="d-flex flex-column justify-content-around flex-md-row flex-md-grow-1">
        <ul class="list-unstyled">
          <li>
            <h4>Resources</h4>
          </li>
          <li><a href="https://www.pexels.com/">Images</a></li>
          <li>
            Fonts
            <ul>
              <li>
                <a href="https://fonts.google.com"
                   target="_black">Google Fonts</a>
              </li>
            </ul>
          </li>
        </ul>
        <ul class="list-unstyled">
          <li>
            <h4>Explore</h4>
          </li>
          <li><a href="">Home</a></li>
          <li><a href="">About</a></li>
          <li><a href="">Contact</a></li>
        </ul>
      </div>

      <!-- Explore & About-->
      <div class="d-flex flex-column justify-content-around flex-md-row flex-md-grow-1">
        <ul class="list-unstyled">
          <li>
            <h4>Follow</h4>
          </li>
          <li><a href="https://twitter.com/FadyKsho" target="_blank" rel="noreferrer">Twitter</a></li>
          <li><a href="https://github.com/fadiksho" target="_blank" rel="noreferrer">Github</a></li>
          <li><a href="https://www.linkedin.com/in/fadi-ksho" target="_blank" rel="noreferrer">LinkedIn</a></li>
        </ul>
        <ul class="list-unstyled">
          <li>
            <h4>About</h4>
          </li>
          <li>fadiksho@gmail.com</li>
          <li>+46 735739271</li>
          <li></li>
        </ul>
      </div>
    </div>
    <div class="d-flex align-items-baseline mt-3">
      <span class="ml-auto display-4">&copy; Fadi Ksho 2019</span>
      <button id="scrollUpButtonId"
              type="button"
              class="go_up_button ml-auto btn btn-outline-secondary">
        &#8593;
      </button>
    </div>
  </footer>
  <!--#endregion-->

  <environment include="Development">
    <script src="~/js/main-bandle.js" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
  </environment>

</body>
</html>
