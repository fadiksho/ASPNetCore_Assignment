@model Course

<div id="course_row_@Model.Id">
  <div class="row align-items-center my-1">
    <div class="col p-2 text-center">
      @Model.Name
    </div>
    <div class="col p-2 text-center">
      <a asp-controller="Teacher"
         asp-action="SelectTeacherToCourse"
         data-ajax="true"
         data-ajax-method="get"
         data-ajax-mode="replace"
         data-ajax-update="#teachers_to_course_@Model.Id"
         data-ajax-success="showAfterSuccess('#course_teacher_@Model.Id')"
         data-ajax-loading="#dashBoardLoaderId"
         class="btn btn-outline-secondary">
        @(Model.Teacher != null ? Model.Teacher.Name : "No Teacher Yet!")
      </a>
    </div>
    <div class="col p-2 text-center">
      @Model.Students.Count
    </div>
    <div class="col p-2 text-center">
      @Model.CourseAssignments.Count
      <button data-dynamic-target="course_assignments_@Model.Id" data-dynamic-toggle="show" class="btn btn-outline-info ml-1">View Assignments</button>
    </div>
    <div class="col p-2 text-center">
      <button data-dynamic-target="course_description_@Model.Id" data-dynamic-toggle="show" class="btn btn-outline-info">Show</button>
    </div>
  </div>
  <div class="row align-items-center my-1 mb-3 collapse" id="course_description_@Model.Id">
    <span class="text-white rounded-pill bg-info scm-translateY-down px-3 ml-2">Description</span>
    <div class="alert pt-3 w-100 rounded border-info">
      @Model.Description
    </div>
  </div>
  <div class="row align-items-center my-1 mb-3 collapse" id="course_assignments_@Model.Id">
    <span class="text-dark rounded-pill bg-light scm-translateY-down px-3 ml-2">Course Assignments</span>
    <div class="pt-3 w-100 rounded border border-light">
      <partial name="~/Views/CourseAssignment/_CourseAssignmentList.cshtml" model="Model.CourseAssignments" />
    </div>
  </div>
  <div class="row align-items-center my-1 mb-3 collapse"
       id="course_teacher_@Model.Id">
    <span class="text-white rounded-pill bg-secondary scm-translateY-down px-3 ml-2">Assign New Teacher</span>
    <div class="p-3 pt-4 w-100 rounded border border-secondary">
      <form asp-controller="Teacher"
            asp-action="SelectTeacherToCourse"
            method="post"
            data-ajax="true"
            data-ajax-method="post"
            data-ajax-mode="replace"
            data-ajax-update="#course_row_@Model.Id"
            data-ajax-loading="#dashBoardLoaderId">
        <div id="teachers_to_course_@Model.Id"></div>
        <input type="hidden" name="courseId" value="@Model.Id" />
        <div class="d-flex w-100 mt-2">
          <button type="button"
                  data-dynamic-toggle="show"
                  data-dynamic-target="course_teacher_@Model.Id"
                  class="ml-auto btn btn-sm btn-outline-danger">
            Cancel
          </button>
          <button type="submit" class="btn ml-2 btn-sm btn-outline-success">Save</button>
        </div>
      </form>
    </div>
  </div>

</div>
