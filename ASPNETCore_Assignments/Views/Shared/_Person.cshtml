@model Person
<div class="row align-items-center my-1 shadow">
	<div class="col p-2">
		@Model.Name
	</div>
	<div class="col p-2">
		@Model.PhoneNumber
	</div>
	<div class="col p-2">
		@Model.City
	</div>
	<div class="col p-2">
		<form asp-controller="Person"
					asp-action="Delete" method="post">
			<input type="hidden" name="id" asp-for="@Model.Id" />
			<button type="submit" class="btn btn-outline-danger">Delete</button>
		</form>
	</div>
</div>