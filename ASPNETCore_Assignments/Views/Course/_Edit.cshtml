@model CourseForUpdatingDto

<form asp-controller="Course"
      asp-action="Edit"
      asp-route-courseId="@Model.Id"
      method="post"
      data-ajax="true"
      data-ajax-method="post"
      data-ajax-mode="replace"
      data-ajax-update="#course_detail_page"
      data-ajax-loading="#loaderId"
      class="w-100 p-4">
  <div class="form-group">
    <label asp-for="Name">Student Name: *</label>
    <input asp-for="Name"
           class="form-control" aria-describedby="CourseName" placeholder="Enter New Course Name..." />
    <small class="text-danger"><span asp-validation-for="Name"></span></small>
  </div>
  <div class="form-group">
    <label asp-for="Name">Student Name: *</label>
    <textarea asp-for="Description"
              class="form-control"
              aria-describedby="CourseDescription"
              placeholder="Enter New Course Description...">
    </textarea>
  </div>
  <div id="course_teacher_@Model.Id"
       class="form-group">
    <a asp-controller="Course"
       asp-action="SelectTeacherToCourse"
       asp-route-teacherId="@Model.TeacherId"
       data-ajax="true"
       data-ajax-method="get"
       data-ajax-mode="replace"
       data-ajax-update="#course_teacher_@Model.Id"
       data-ajax-success="showAfterSuccess('#course_teacher_@Model.Id')"
       data-ajax-loading="#loaderId"
       class="btn btn-outline-secondary">
      Change Techer
    </a>
    <input asp-for="TeacherId" type="hidden" />
  </div>

  <input asp-for="Id" type="hidden" />

  <div class="form-group">
    <button type="submit" class="btn btn-success">Save</button>
    <a asp-controller="Course"
       asp-action="_Details"
       asp-route-courseId="@Model.Id"
       data-ajax="true"
       data-ajax-method="get"
       data-ajax-mode="replace"
       data-ajax-update="#course_detail_page"
       data-ajax-loading="#loaderId"
       class="btn btn-danger">Cancel</a>
  </div>
</form>