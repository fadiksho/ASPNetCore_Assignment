@model Temperature
@{
	ViewData["Title"] = "Fever Check";
}

<div class="container pt-3">
	<div class="jumbotron rounded shadow">
		<form asp-controller="Temperature" asp-action="FeverCheck" method="get">
			<div class="form-group">
				<label asp-for="TemperatureValue">Temperature</label>
				<input class="form-control" step=".01" type="number" asp-for="TemperatureValue" id="temperature" aria-describedby="temerature value" placeholder="Enter temperature">
			</div>
			<div class="form-group">
				<div class="form-check form-check-inline">
					<input asp-for="@Model.MeasurementUnit" class="form-check-input" type="radio" id="inlineRadio1" value="Celsius">
					<label class="form-check-label" for="inlineRadio1">Celsius</label>
				</div>
				<div class="form-check form-check-inline">
					<input asp-for="@Model.MeasurementUnit" class="form-check-input" type="radio" id="inlineRadio2" value="Fahrenheit">
					<label class="form-check-label" for="inlineRadio2">Fahrenheit</label>
				</div>
			</div>
			<button type="submit" class="btn btn-primary">Check Temperature</button>
		</form>
	</div>
	@if (!string.IsNullOrWhiteSpace(Model.Message))
	{
		<div class="alert alert-info">
			@Model.Message
		</div>
	}

</div>
