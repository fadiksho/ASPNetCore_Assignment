@model TeacherForCreatingDto
<form asp-controller="Student"
			asp-action="AddStudent"
			id="addStudentFormId"
			data-ajax="true"
			method="POST"
			data-ajax-method="POST"
			data-ajax-mode="replace"
			data-ajax-update="#dashboard_content"
			data-ajax-loading="#loaderId">
	<div class="form-group">
		<label asp-for="Name">Student Name</label>
		<input asp-for="Name" class="form-control" aria-describedby="StudentName" placeholder="Enter Student Name...">
		<small class="text-danger"><span asp-validation-for="Name"></span></small>
	</div>
	<button type="submit" class="btn btn-success">Save Student</button>
</form>